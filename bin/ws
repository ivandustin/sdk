#!/usr/bin/env python
from functools import partial
from asyncio import Queue, run
from sys import stdin
from websockets import serve


async def main():
    mq = Queue()
    fn = partial(handle, mq)
    async with serve(fn, "localhost", 1234):
        while True:
            q, msg = await mq.get()
            print(msg, flush=True)
            out = next(stdin)
            await q.put(out)


async def handle(mq, ws):
    q = Queue()
    async for msg in ws:
        await mq.put((q, msg))
        out = await q.get()
        await ws.send(out)


run(main())
